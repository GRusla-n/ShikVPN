# SimpleVPN Server Configuration
# Copy to /etc/simplevpn/server.toml and edit values

# WireGuard UDP listen port
listen_port = 51820

# VPN subnet — the server gets .1, clients get .2+
address = "10.0.0.1/24"

# Server keypair — generate with: vpn-keygen
private_key = "YOUR_SERVER_PRIVATE_KEY_BASE64"
public_key  = "YOUR_SERVER_PUBLIC_KEY_BASE64"

# HTTP registration API port
api_port = 8080

# Public IP or hostname that clients will connect to
external_host = "your.server.ip.or.hostname"

# DNS servers pushed to clients
dns_servers = ["1.1.1.1", "8.8.8.8"]

# Tunnel MTU (default: 1420, good for most setups)
mtu = 1420

# TUN interface name (default: wg0)
# interface_name = "wg0"

# API key — if set, clients must present this key to register.
# Generate a random key: openssl rand -hex 32
# api_key = "your-secret-api-key"

# WireGuard log level: "verbose", "error", or "silent" (default: "error")
# log_level = "error"
